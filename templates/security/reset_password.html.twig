{% extends 'base.html.twig' %}

{% block title %}Restablecer Contrase単a{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/reset_password.css') }}">
{% endblock %}


{% block body %}
<div class="container container-reset mt-4">
    <h2>Restablecer Contrase単a</h2>
    <p>Por favor, ingresa tu nueva contrase単a.</p>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {{ form_start(resetForm, {'action': path('resetear_password', {'token': token}), 'method': 'POST', 'attr': {'class': 'form-reset'}}) }}
        {{ form_row(resetForm.newPassword.first, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(resetForm.newPassword.second, {'attr': {'class': 'form-control'}}) }}
        <button type="submit" class="btn btn-primary">Restablecer contrase単a</button>
    {{ form_end(resetForm) }}
</div>
{% endblock %}

