{% extends 'base.html.twig' %}

{% block title %}Registrar nuevo usuario{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/registro.css') }}">
{% endblock %}

{% block body %}
<div class="container container-registro">
    <h1>Registrar nuevo usuario</h1>
    <p>¿Ya tienes una cuenta? <a href="{{ path('app_login') }}">Inicia sesión aquí</a></p>

    {{ form_start(registrationForm) }}

    <div class="form-group">
        {{ form_label(registrationForm.nombre) }}
        {{ form_widget(registrationForm.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Nombre'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.apellidos) }}
        {{ form_widget(registrationForm.apellidos, {'attr': {'class': 'form-control', 'placeholder': 'Apellidos'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.email) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.telefono) }}
        {{ form_widget(registrationForm.telefono, {'attr': {'class': 'form-control', 'placeholder': 'Teléfono'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.password.first) }}
        {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Contraseña'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(registrationForm.password.second) }}
        {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Repetir Contraseña'}}) }}
    </div>

    <div class="form-group">
        <div class="form-check">
            {{ form_widget(registrationForm.termsAccepted, {'attr': {'class': 'form-check-input'}}) }}
            <label class="form-check-label">
                {{ form_label(registrationForm.termsAccepted) }} 
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Crear nuevo usuario</button>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}

