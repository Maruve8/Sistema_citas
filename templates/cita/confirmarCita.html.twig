{% extends 'base.html.twig' %}

{% block title %}Confirmar Cita{% endblock %}

{% block body %}
<h2>ESTOS SON LOS DATOS SELECCIONADOS.</h2>
<p>¿DESEA CONFIRMAR SU CITA?</p>

<div>
    <p><strong>Paciente:</strong> {{ app.user.nombre }} {{ app.user.apellidos }}</p>
    <p><strong>Cita:</strong> {{ especialidad.nombre }}</p>
    <p><strong>Médico:</strong> {{ medico.nombre }} {{ medico.apellidos }}</p>
    <p><strong>Fecha y hora:</strong> {{ fechaHora|date('d/m/Y H:i') }}</p>
    
    <a href="{{ path('app_cita_success', {'especialidadId': especialidad.id, 'medicoId': medico.id, 'fechaHora': fechaHora.format('Y-m-d H:i')}) }}" class="btn btn-success">Confirmar</a>
    <a href="{{ path('app_cita_calendar', {'especialidadId': especialidad.id, 'medicoId': medico.id}) }}" class="btn btn-danger">Volver</a>
</div>
{% endblock %}
