{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/inicio.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-left">Hola, {{ app.user.nombre }}</h1>
            <p class="text-left">¿Qué quieres hacer?</p>
        </div>
    </div>

    <!-- Botones de acción -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-8 d-flex flex-column align-items-center">
            <a href="{{ path('app_cita_online') }}" class="btn btn-primary btn-lg mb-3">Consulta Médica</a>
            <a href="{{ path('app_gestiona_citas') }}" class="btn btn-primary btn-lg mb-3">Gestión de Citas</a>
        </div>
    </div>
    <div class="row justify-content-center mt-2">
        <div class="col-md-8 text-right">
            <a href="{{ path('app_contacto') }}" class="text-secondary">¿Necesitas ayuda?</a>
        </div>
    </div>
</div>
{% endblock %}
